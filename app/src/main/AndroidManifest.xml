<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name="com.handmadeapp.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HandMadeApp">

        <activity
            android:name="com.handmadeapp.editor.dev.DevMenuActivity"
            android:exported="false" />

        <!-- Backward-compat alias for old FQCN (fix targetActivity) -->
        <activity-alias
            android:name="com.appforcross.editor.dev.DevMenuActivity"
            android:targetActivity="com.handmadeapp.editor.dev.DevMenuActivity"
            android:exported="false" />

        <!-- Import/Preview Activity (Launcher) -->
        <activity
            android:name="com.handmadeapp.ui.importer.ImportActivity"
            android:exported="true"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
